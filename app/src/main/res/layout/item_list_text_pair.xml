<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_gravity="end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="ORANG"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_20"
        android:layout_marginTop="@dimen/dimen_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/point_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        android:src="@drawable/bg_shape_button_blue"
        android:layout_marginEnd="@dimen/dimen_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text"
        app:layout_constraintEnd_toStartOf="@+id/tv_text"
        app:layout_constraintTop_toTopOf="@+id/tv_text"
        android:contentDescription="text point" />


    </androidx.constraintlayout.widget.ConstraintLayout>